<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserRegistration</servlet-name>
        <servlet-class>controller.RegistrationController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistration</servlet-name>
        <url-pattern>/userRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequisicaoRegistration</servlet-name>
        <servlet-class>controller.RequisicaoController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequisicaoRegistration</servlet-name>
        <url-pattern>/ReqRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IncidenteRegistration</servlet-name>
        <servlet-class>controller.IncidenteController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncidenteRegistration</servlet-name>
        <url-pattern>/IncRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConsultaUser</servlet-name>
        <servlet-class>controller.ConsultaUser</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultaUser</servlet-name>
        <url-pattern>/consultaUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>ConsultaRequisicao</servlet-name>
        <url-pattern>/consultaRequisicao</url-pattern>
    </servlet-mapping>
      <servlet>
        <servlet-name>ConsultaRequisicao</servlet-name>
        <servlet-class>controller.ConsultaRequisicao</servlet-class>
    </servlet>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
   
    <session-config>
        <session-timeout>3</session-timeout>
    </session-config>
</web-app>
