<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name = "Incidente" table = "incidente">
      
        <meta attribute = "class-description">
            This class contains the Incidente detail. 
        </meta>
      
        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>
	<property name = "Tipo" column = "tipo" type = "int"/>
	<property name = "Prioridade" column = "prioridade" type = "int"/>
        <property name = "Categoria" column = "categoria" type = "string"/>
        <property name = "Subcategoria" column = "subcategoria" type = "string"/>
	<property name = "Numero de série" column = "serie" type = "string"/>
 	<property name = "Data" column = "data" type = "string"/>
        <property name = "SLA do chamado" column = "sla" type = "string"/>
       	<property name = "Descrição(Título)" column = "titulo" type = "string"/>
        <property name = "Descrição" column = "descricao" type = "string"/>
        <property name = "Status" column = "status" type = "int"/>
        
    </class>
</hibernate-mapping>